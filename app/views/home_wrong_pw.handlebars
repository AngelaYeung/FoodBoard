  <!-- Modal: Login/Register Forms -->
  <div class="modal" id="logreg-modal" tabindex="1" role="dialog">
    <div class="modal-dialog modal-dialog-centered tabbed-modal" role="document">
      <div id="logo-above-modal">
        <img src="./Pictures/fb-logo-transparent.png" alt="FoodBoard">
      </div>
      <!-- Content-->
      <div class="modal-content">
        <!-- Navigation tabs: login/register-->
        <ul class="nav nav-tabs tabs-2 green" role="tablist">
          <li class="nav-item active">
            <a class="nav-link" data-toggle="tab" href="#login-panel" role="tab"> Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#register-panel" role="tab"> Register</a>
          </li>
        </ul>

        <!-- Tab Panels -->
        <div class="tab-content">
          <!-- Login Panel -->
          <div class="tab-pane show active" id="login-panel" role="tabpanel">
            <!-- Body of Login Panel -->
            <div class="modal-body">
              <div>
                <p class="modal-text">Welcome back to FoodBoard!</p>
                <p style="color:red; text-align:center" >Email or password is incorrect.</p>
              </div>
              <form name="login" class="form-horizontal" action="/user_login" method="POST">
                <!-- Login form email input -->
                <div class="form-group">
                  <div class="col-sm-2 input-addon">
                    <span class="glyphicon glyphicon-envelope"></span>
                  </div>
                  <div class="col-sm-9">
                    <input value="{{email}}" class="form-control" type="email" placeholder="Enter Email Address" name="login_email" required>
                  </div>
                </div>
                <!-- Login form password input -->
                <div class="form-group">
                  <div class="col-sm-2 input-addon">
                    <span class="glyphicon glyphicon-lock"></span>
                  </div>
                  <div class="col-sm-9">
                    <input class="form-control" type="password" placeholder="Enter Password" name="login_pwd" required>
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-success center-block" value="Login">Login</button>
                </div>
              </form>
            </div>
          </div>
          {{> register}}
          <!-- Register Panel Footer -->
          <!-- <div class="modal-footer">
                <button type="submit" class="btn btn-success center-block" value="Register">Register</button>
              </div> -->
        </div>
      </div>
    </div>
