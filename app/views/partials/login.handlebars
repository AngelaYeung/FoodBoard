<!-- Body of Login Panel -->
<div class="modal-body">
    <div>
        <p class="modal-text">Welcome back to FoodBoard!</p>
    </div>
    <form name="login" class="form-horizontal" action="/user_login" method="POST">
        <!-- Login form email input -->
        <div class="form-group">
            <div class="col-sm-2 input-addon">
                <span class="glyphicon glyphicon-envelope"></span>
            </div>
            <div class="col-sm-9">
                <input autofocus class="form-control" type="email" placeholder="Enter Email Address" name="login_email" required>
            </div>
        </div>
        <!-- Login form password input -->
        <div class="form-group">
            <div class="col-sm-2 input-addon">
                <span class="glyphicon glyphicon-lock"></span>
            </div>
            <div class="col-sm-9">
                <input class="form-control" type="password" placeholder="Enter Password" name="login_pwd" required>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success center-block" value="Login">Login</button>
        </div>
    </form>
</div>
</div>